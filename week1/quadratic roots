#include<stdio.h>
#include<math.h>
#include<stdlib.h>
void quad(float a, float b, float c)
{
  float disc,r1,r2,realpart,imagpart;
  disc= (b*b)- (4*a*c);
  if (disc<0)
  {
     printf("imaginary roots\n");
     realpart=-b/(2*a);
     imagpart=sqrt(abs(disc))/(2*a);
     printf("root 1= %f +1 %f\n",realpart, imagpart);
     printf("root 2= %f - 1 %f\n", realpart,imagpart);
  }
  else if(disc==0)
  {
    printf("roots are real and equal\n");
    r1=-b/(2*a);
    r2=r1;
    printf("root 1= %f\n",r1);
    printf("root 2= %f\n", r2);
   }
   else if(disc>0)
   {
     printf(" roots are real and distinct\n");
     r1=(-b+sqrt(disc))/(2*a);
     r2=(-b-sqrt(disc))/(2*a);
     printf("root 1= %f \n", r1);
     printf("root 2= %f \n", r2);
    }
 }
 int main()
 {
   float a,b,c;
   printf("enter the values of a,b and c\n");
   scanf("%f %f %f",&a,&b,&c);
   quad(a,b,c);
   return 0;
} 
