#include<stdio.h>
#include<math.h>
int reverse(int n)
{
     int d,sum=0;
     while(n>0)
     {
		 d=n%10;
		 sum=sum*10+d;
		 n=n/10;
	 }
	 return sum;
 }
 int main()
 {
	 int n;
	 int x;
	 printf("enter the required integer to be reversed:");
	 scanf("%d",&n);
	 x=reverse(n);
	 printf("the reversed no is:%d",x);
 }     

    
     
    
